{
  "name": "design-assistant",
  "version": "0.1.0",
  "description": "CAD Design Assistant with PC Diagnostics - POC",
  "main": "electron/main.ts",
  "scripts": {
    "dev": "cross-env NODE_OPTIONS='--import tsx' concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "vite build && electron-builder",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "vue-tsc --noEmit -p tsconfig.json && tsc --project tsconfig.node.json --noEmit && tsc --project tsconfig.electron.json --noEmit"
  },
  "dependencies": {
    "@langchain/anthropic": "^0.3.0",
    "@langchain/community": "^0.3.0",
    "@langchain/core": "^0.3.0",
    "@langchain/langgraph": "^0.2.0",
    "@langchain/openai": "^0.3.0",
    "dotenv": "^16.4.0",
    "faiss-node": "^0.5.1",
    "langchain": "^0.3.0",
    "pinia": "^2.2.0",
    "systeminformation": "^5.31.1",
    "vue": "^3.5.0",
    "vue-router": "^4.4.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@vitejs/plugin-vue": "^5.2.0",
    "concurrently": "^9.0.0",
    "cross-env": "^7.0.0",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vite": "^6.0.0",
    "vitest": "^2.0.0",
    "vue-tsc": "^2.0.0",
    "wait-on": "^8.0.0"
  },
  "build": {
    "appId": "com.design-assistant.app",
    "productName": "Design Assistant",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "agent/**/*",
      "resources/**/*",
      ".env"
    ]
  }
}
